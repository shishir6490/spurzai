NODE_ENV=development
PORT=4000

# MongoDB Connection
# Local: mongodb://localhost:27017/spurz-ai
# Atlas: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/spurz-ai
MONGODB_URI=mongodb://localhost:27017/spurz-ai

# Firebase Admin SDK
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:19000,http://localhost:19006,http://localhost:8081

# Logging
LOG_LEVEL=debug
